{
    "batchsize": 5000,
   
    "database":
    {
        "dbname" : "tweets",
        "url": "https://bluemix.cloudant.com"
 
    },

    "delimiter" : "tab",

    "fields": [
      {"field": "payload.tweet", "outname":"tweet"},  
      {"field": "payload.score", "outname":"score"},
      {"field": "payload.location", "outname": "location"}
    ],

    "outputFile" : "data.csv",

    "quote": "double"
  }